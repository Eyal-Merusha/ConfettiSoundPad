<Page x:Class="ConfettiSoundPad.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConfettiSoundPad"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="500"
      Title="Menu">

    <Grid>
        <Button Content="Play Sound" Height="20" Width="100" Click="PlaySound_Click" Margin="200,180,200,200"/>
        <Button x:Name="Record" Content="Start Recording" Height="20" Width="100" Background="LightGray" Click="RecordSound_Click" Margin="200,205,200,175" RenderTransformOrigin="0.512,2.15"/>
    </Grid>
</Page>
